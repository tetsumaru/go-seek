{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "timezone": "Asia/Tokyo",
    "commitMessagePrefix": "ci: ",
    "dependencyDashboard": false,
    "branchConcurrentLimit": 0,
    "reviewers": [
      "tetsumaru"
    ],
    "separateMinorPatch": true,
    "major": {
      "stabilityDays": 7
    },
    "minor": {
      "stabilityDays": 3
    },
    "patch": {
      "stabilityDays": 2,
      "automerge": true
    }
  }